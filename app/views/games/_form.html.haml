= simple_form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :location
  .field
    = f.input :format
    = f.input :sides
  .field
    = f.input :time, :input_html => {:class => 'bootstrap-timepicker'}, :input_html => { :type => "text" }
  .field
    = f.input :date, :as => :datepicker, :input_html => { :type => "text" }
  .actions
    = f.submit 'Save'
