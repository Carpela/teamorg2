= simple_form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.input :format
    = f.input :sides
  .field
    = f.label :time
    = f.time_select :time, {:minute_interval => 15}
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
