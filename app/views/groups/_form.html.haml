= simple_form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name
    = f.input :game_id, as: :hidden, input_html: {value: params[:game_id].presence}
  .actions
    = f.submit 'Save'