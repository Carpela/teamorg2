= simple_form_for @game do |f|
  - if @game_player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game_player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @game_player.errors.full_messages.each do |msg|
          %li= msg

  = f.simple_fields_for :player do |player|
    = player.input :name
    = player.input :email
    = player.submit
